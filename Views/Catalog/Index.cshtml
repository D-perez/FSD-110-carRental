@section Styles {
    <link rel="stylesheet" href="/css/catalog/index.css">
}


<h2>Catalog Page</h2>

<div id="catalog-container">

<div id="popup" class="modal" tabindex="-1" role="dialog">
    
  <div class="modal-dialog">

    <div class="modal-content">

      <div class="modal-header">
        <h5 id="mdlTitle" class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div id="modal-body-txt" class="modal-body">
        <p >Modal body text goes here.</p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>

    </div>

  </div>

</div>

</div>


@section Scripts {
    <script src="/js/catalog/index.js" ></script>
}